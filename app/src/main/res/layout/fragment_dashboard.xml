<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/hi_user"
            android:fontFamily="@font/open_sans"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/orange_700"
            android:layout_marginHorizontal="30dp"
        />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:src="@color/orange_500"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/nutrition_intro"
            android:fontFamily="@font/open_sans"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="30dp"
            />

        <Button
            android:id="@+id/plan_trip_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plan_trip"
            android:textAllCaps="false"
            android:paddingVertical="20dp"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:fontFamily="@font/open_sans"
            android:backgroundTint="@color/orange_500"
            android:layout_marginHorizontal="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check out these articles"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/open_sans"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cover_image1"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/article1"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/article1_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WHO: Healthy diet"
                    android:fontFamily="@font/open_sans"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/cover_image1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="25dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/article1_textview"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cover_image2"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/article2"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/article2_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WHO: Salt reduction"
                    android:fontFamily="@font/open_sans"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/cover_image2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="25dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/article2_textview"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/cover_image3"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/article3"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:id="@+id/article3_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WHO: Sugars and dental caries"
                    android:fontFamily="@font/open_sans"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/cover_image3"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="25dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toBottomOf="@id/article3_textview"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>